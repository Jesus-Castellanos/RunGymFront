@model RunGymFront.Models.Ejercicios

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>RunGym - Agregar Nueva Rutina</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/Content/css/Rutinas.css" />
</head>
<body>
    <div class="container mt-5">
        <h2 class="mb-4 text-center">Agregar Nueva Rutina</h2>

        @using (Html.BeginForm("Create", "Rutinas", FormMethod.Post, new { enctype = "multipart/form-data" }))
        {
            @Html.AntiForgeryToken()

            <div class="mb-3">
                @Html.LabelFor(model => model.Categoria, new { @class = "form-label" })
                @Html.TextBoxFor(model => model.Categoria, new { @class = "form-control", placeholder = "Ejemplo: Flexiones" })
                @Html.ValidationMessageFor(model => model.Categoria, "", new { @class = "text-danger" })
            </div>

            <div class="mb-3">
                @Html.Label("URL de la Imagen", new { @class = "form-label" })
                @Html.TextBoxFor(model => model.ImagenURL, new { @class = "form-control", placeholder = "https://ejemplo.com/imagen.jpg" })
                @Html.ValidationMessageFor(model => model.ImagenURL, "", new { @class = "text-danger" })
            </div>

            <!-- Si quieres subir archivo de imagen en lugar de URL, comenta lo anterior y usa esto:
            <div class="mb-3">
                <label for="ImagenFile" class="form-label">Seleccionar Imagen</label>
                <input type="file" class="form-control" id="ImagenFile" name="ImagenFile" accept="image/*" />
            </div>
            -->

            <div class="d-flex justify-content-center gap-3">
                <button type="submit" class="btn btn-success">
                    <i class="fas fa-save"></i> Guardar
                </button>
                <a href="@Url.Action("Index", "Rutinas")" class="btn btn-secondary">
                    <i class="fas fa-arrow-left"></i> Cancelar
                </a>
            </div>
        }
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
