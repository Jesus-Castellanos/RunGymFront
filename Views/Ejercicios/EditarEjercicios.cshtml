@model List<RunGymFront.Models.Ejercicios>

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>RunGym - Ejercicios</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="" />
    <!-- Iconos de Font Awesome -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" />
    <style>
        /* Rutinas.css */

/* Tabla */
table {
    background-color: #fff;
    border-radius: 8px;
    overflow: hidden;
    box-shadow: 0 4px 12px rgb(0 0 0 / 0.1);
}

table thead.table-dark {
    background-color: #343a40 !important;
    color: white;
    font-weight: 600;
    font-size: 1rem;
}

table tbody tr:hover {
    background-color: #f1f1f1;
    transition: background-color 0.3s ease;
}

table td, table th {
    vertical-align: middle !important;
    padding: 12px 15px !important;
    text-align: center;
    font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
}

/* Imagen en tabla */
table img.img-fluid {
    border-radius: 8px;
    max-height: 120px;
    object-fit: cover;
    transition: transform 0.3s ease;
    cursor: pointer;
}

table img.img-fluid:hover {
    transform: scale(1.05);
    box-shadow: 0 4px 15px rgba(0, 0, 0, 0.2);
}

/* Botones de acción */
.btn-sm {
    min-width: 40px;
    padding: 6px 10px;
}

/* Espaciado entre botones */
.btn-sm + .btn-sm {
    margin-left: 6px;
}

/* Contenedor */
.container {
    padding-top: 30px;
    padding-bottom: 50px;
}

/* Responsive */
.media (max-width: 768px) {
    table {
        display: block;
        overflow-x: auto;
        white-space: nowrap;
    }

    table thead {
        display: none;
    }

    table tbody tr {
        display: block;
        margin-bottom: 20px;
        border: 1px solid #dee2e6;
        border-radius: 8px;
        padding: 15px;
        background: white;
    }

    table tbody tr td {
        display: flex;
        justify-content: space-between;
        padding: 10px 0;
        text-align: right;
        border: none;
        border-bottom: 1px solid #eee;
        position: relative;
    }

    table tbody tr td:last-child {
        border-bottom: none;
    }

    table tbody tr td::before {
        content: attr(data-label);
        font-weight: 700;
        color: #555;
        position: absolute;
        left: 15px;
        top: 10px;
        text-align: left;
    }

    table tbody tr td img.img-fluid {
        max-height: 100px;
    }
}

    </style>
</head>
<body>
    <div class="container mt-4">
        <div class="text-end mb-4">
            <a href="@Url.Action("AgregarRutinas", "Rutinas")" class="btn btn-success">
                <i class="fas fa-plus"></i> Agregar Nueva Rutina
            </a>
        </div>

        <table class="table table-bordered table-striped align-middle text-center">
            <thead class="table-dark">
                <tr>
                    <th>Imagen</th>
                    <th>Categoría</th>
                    <th>Acciones</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var ejercicio in Model)
                {
                    <tr>
                        <td>
                            <a href="@Url.Action("Rutinas", "Rutinas", new { Id = ejercicio.Id })">
                                <img src="@ejercicio.ImagenURL" alt="@ejercicio.Categoria" class="img-fluid" style="max-height: 120px; border-radius: 6px;" />
                            </a>
                        </td>
                        <td>@ejercicio.Categoria</td>
                        <td>
                            <a href="@Url.Action("Editar", "Ejercicios", new { id = ejercicio.Id })" class="btn btn-primary btn-sm me-1" title="Editar">
                                <i class="fas fa-edit"></i>
                            </a>
                            <a href="@Url.Action("Delete", "Ejercicios", new { id = ejercicio.Id })" class="btn btn-danger btn-sm" title="Eliminar"
                               onclick="return confirm('¿Estás seguro de que deseas eliminar esta rutina?');">
                                <i class="fas fa-trash-alt"></i>
                            </a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
    <!-- Scripts de Bootstrap -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
